{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-standard-less"
  ],
  "customSyntax": "postcss-less",
  "rules": {
    "font-family-name-quotes": null,
    "rule-empty-line-before": null,
    "font-family-no-missing-generic-family-keyword": [
      true,
      {
        "ignoreFontFamilies": [
          "Roboto-Regular",
          "Roboto-Bold",
          "Roboto-Medium",
          "PingFangSC-Regular",
          "PingFangSC-Medium"
        ]
      }
    ]
  },
  "ignoreFiles": ["dist"]
}
